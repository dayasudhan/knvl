
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
	<script src="javascripts/customer.js"></script>

	<style type="text/css">
	#header {
		height: 15%;
	}
	#middleware {
		height: 75%;
	}
	#footer {
		height: 10%;
	}
	#cityarea {
		float: left;		
	}

	</style>
</head>
<body ng-app="mainModule">
	<nav class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">Khaanavali  ಖಾನಾವಳಿ</a>
			</div>

		</div>
	</nav>
	<div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
</div>
	<div class="container" ng-controller="mainController">
		<div id="container">
			<div id="header" style="border:groove;" align="center">
				<form class="form-inline" role="form">
					<h2></h2>
					<div class="form-group">
						<select class="form-control" id="inputcity" placeholder="Enter City" ng-model="search_city" style="max-width:190%;">
							<option value="" disabled selected>Select your City</option>
							<option>Bangalore</option>
							<option>Chennai</option>
							<option>qwe</option>
						</select>

					</div>
					<div class="form-group">
						
						<select class="form-control" id="inputarea" placeholder="Enter an area" ng-model="areaname" style="max-width:190%;">
							<option value="" disabled selected>Select your Area</option>
							<option>RajajiNagar</option>
							<option>VijayNagar</option>
							<option>qwe</option>
						</select>
					</div>
					<!--div class="checkbox">
						<label><input type="checkbox"> Remember me</label>
					</div-->
					<button type="submit" id="find_buttonn" class="btn btn-primary" ng-click="findRestaurants()">Find </button>
				</form>

			</div>

			<div id="middleware" >
				<div class="panel panel-info" ng-repeat="hotel in hotellist" >
					<div class="row" >
						<div class="col-sm-6 col-md-2">
							<img src="https://assets.foodpanda.in/dynamic/images/vendors/v7zf_sqp.jpg?v=20150720173250" class="thumbnail"> 	
						</div >
						<div class="col-sm-6 col-md-6">
							<div class="panel-heading">
								<h3 class="panel-title"><b>{{hotel.hotel.name}}</b></h3>
							</div>
							<div class="panel-body">
								{{hotel.hotel.email}}
							</div>
							<div>				
								<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" ng-click="currentHotel($index)">Open Modal</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Modal -->
		<div id="myModal" class="modal fade" role="dialog">
			<div class="modal-dialog">

				<!-- Modal content-->
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal">&times;</button>
						<h4 class="modal-title">Menu</h4>
					</div>
					<div class="modal-body">
						<table class="table">
							<thead>
								<tr>
									<th>Name</th>
									<th>Price</th>
									<th>Qty</th>
									<th>Total</th>
								</tr>
							</thead>
							<tbody>
								<tr ng-repeat="menu in hotel.menu">
									<td>{{menu.name}}</td>
									<td>{{menu.price}}</td>
									<td><input type="number"  ng:model="menu.qty" ng:required class="input-mini"></td>
									<td>{{menu.price * menu.qty | currency}}</td>

								</tr>
								<tr>
									<td></td>
									<td></td>
									<td>Total:</td>
									<td>{{total() | currency}}</td>
								</tr>
							</tbody>
						</table>	
						<div class="form-group" name="myForm">

							<input type="text" class="form-control" id="user"  ng-model="user" required placeholder="Enter Name">

						</div>
						<div class="form-group">
							<input type="tel" class="form-control" id="inputphone" ng-model="phone"placeholder="Enter Phone Number">
						</div>

						<div class="form-group">
							<input type="text" class="form-control" id="inputflat" ng-model="flat_no" placeholder="Enter House/Flat No">
						</div>

						<div class="form-group">
							<input type="text" class="form-control" id="inputaddress" ng-model="address" placeholder="Enter Address">
						</div>

						<div class="form-group">
							<input type="text" class="form-control" id="inputlocality" ng-model="landmark" placeholder="Enter Locality/Landmark">
						</div>

					</div>


					<div class="modal-footer" >
						<button type="button" ng-disabled="myForm.user.$dirty && myForm.user.$invalid" class="btn btn-default" data-dismiss="modal" ng-click="order()">Order</button>

					</div>


				</div>

			</div>
		</div>
	</div>
</body>
</html>