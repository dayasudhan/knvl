<div class="sectionthirteen">
    <div class="container">
        <div class="row picandname">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 userdetail">
                <div class="usernames">
                    <ul class="usernameslist">
                        <li><p><b>Name</b> : {{profile.name}}</p></li>
                        <li><p><b>Phone</b> : {{profile.phone}}</p></li>
                        <li><p><b>E-Mail</b> : {{profile.email}}</p></li>
                    </ul>
                </div>

            </div>
        </div>
        <div class="row picandname">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 userdetail">
                <div class="addresspart">
                    <ul class="addresslist">
                        <li ng-repeat="address in profile.addresses">
                            <div class="addlist">
                                <h3>{{address.label}}</h3> </div>
                            <div class="addlistt">
                                <ul class="adddetails">
                                    <li><p><span>Address Line 1 :</span> {{address.addressLine1}}</p></li>
                                    <li><p><span>Address Line 2 :</span> {{address.addressLine2}}</p></li>
                                    <li><p><span>Landmark       :</span> {{address.LandMark}}</p></li>
                                    <li><p><span>City           :</span> {{address.city}}</p></li>
                                    <li><p><span>Zip            :</span> {{address.zip}}</p></li>
                                </ul>
                            </div>
                            <div class="edel">
                                <div class="delete">
                                    <button type="submit" class="btn btn-danger btn-sm" ng-click="deleteAddress(address)">REMOVE</button>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row picandname">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                <a href="#" ng-show="isLoggedIn" data-toggle="modal" data-target="#newaddressModal">
                    <button type="submit" class="btn btn-primary btn-md addmargin">ADD NEW ADDRESS</button>
                </a>
                <div class="modal fade" id="newaddressModal" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <label class="rq">All Fields are Mandatory</label>
                                <div class="adder">
                                    <h3><input required type="text" class="form-control adders" ng-model="label" placeholder="Label" maxlength="15"></h3> </div>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <ul class="adderslist">
                                        <li><input type="text" class="form-control adders" ng-model="addressLine1" placeholder="Addressline 1" maxlength="60"> </li>
                                        <li><input type="text" class="form-control adders" ng-model="addressLine2" placeholder="Addressline 2" maxlength="60"> </li>
                                        <li><input type="text" class="form-control adders" ng-model="LandMark" placeholder="Landmark" maxlength="30"> </li>
                                        <li><input type="text" class="form-control adders" ng-model="city" placeholder="City" maxlength="20"> </li>
                                        <li><input type="text" class="form-control adders" ng-model="zip" placeholder="zip" maxlength="6"> </li>
                                     </ul>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary btn-sm" data-dismiss="modal" ng-click="addAddress()">ADD</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
        </div>
    </div>
</div>